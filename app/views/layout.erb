  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>ClassReads</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <script src="https://kit.fontawesome.com/8a84fb2ccd.js"></script>
  </head>
  <body>
    <nav>
      <% if logged_in? %>
        <% if session[:role] == 'teacher' %>
          Welcome, <a href="/teachers/<%=current_user.username %>"><%= current_user.name %>!</a>
        <% else %>
          Welcome, <a href="/students/<%=current_user.username %>"><%= current_user.name %>!</a>
        <% end %><br>
        <a href="/students"><button class="btn"><i class="fas fa-school"></i> Classroom</button></a>
        <a href="/books"><button class="btn"><i class="fas fa-book"></i> Library</button></a>
        <a href="/logout"><button class="btn"><i class="fas fa-sign-out-alt"></i> Log Out</button></a>

      <% else %>
        <a href="/login"><button class="btn"><i class="fas fa-sign-in-alt"></i> Sign In</button></a>
        <a href="/register"><button class="btn"><i class="fas fa-user-plus"></i> Register</button></a>
      <% end %>
    </nav>
    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>ClassReads</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
