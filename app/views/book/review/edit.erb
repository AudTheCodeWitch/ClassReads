<h1>Edit Your Review For <%= @book.title %></h1>
<form action="/books/<%= @book.slug %>/reviews/<%= @review.id %>" method="post">
  <p><label for="rating">Stars: </label><input type="number" id="rating" name="review[rating]" min="0" max="5" value="<%= @review.rating %>"></p>
  <p><label for="review">Review: </label><br>
    <textarea id="review" name="review[review]"><%= @review.review %>></textarea></p>
  <input type="submit" value="Submit Your Review">
</form>