<h1>Edit This Book</h1>
<form action="/books/<%= @book.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><label for="title">Title: </label><input type="text" id="title" name="book[title]" value="<%= @book.title %>"></p>
  <p><label for="author">Author: </label><input type="text" id="author" name="book[author]" value="<%= @book.author %>"></p>
  <p><label for="genre">Genre: </label><input type="text" id="genre" name="book[genre]" value="<%= @book.genre %>"></p>
  <input type="submit" value="Submit">
</form>